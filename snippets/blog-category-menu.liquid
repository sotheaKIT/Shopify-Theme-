<script>
  var menuItems = {
    $dmenuItems: null,
    openClass: 'open',
    selectClass: 'selected',
    init: function(){
      var self = this;
      self.$menuItems = $('.menu');
      self.eventHandler();
      console.log(self.$menuItems.find('.menu_header'))
    },
    eventHandler: function(){
      var self = this;

      // Opening dropdown
      self.$menuItems.find('.menu_header').click(function(){
        self.$menuItems.removeClass(self.openClass);
        $(this).parents('.menu').addClass(self.openClass);
        console.log("click click click")
      });

      self.$menuItems.find('.menu-content-wrapper ul li a.menu_header').click(function(){
        var $that = $(this);
        var $menu = $that.parents('.menu');
        // Close dropdown
        $menu.removeClass(self.openClass);
      });

      // Close all dropdown onclick on another element
      $(document).bind('click', function(e){
        if (! $(e.target).parents().hasClass('menu')){ self.$menuItems.removeClass(self.openClass); }
      });
    }
  };

  $(function(){
    menuItems.init();
  });

</script>